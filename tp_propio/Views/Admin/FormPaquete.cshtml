@model Paquete

                        <div class="form-group col-xs-12">
                            <label>Ingrese nombre:</label>
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", autocomplete = "off"})
                            @Html.ValidationMessageFor( m => m.Nombre, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-xs-12">
                            <label>Ingrese descripción:</label>
                            @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.Descripcion, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-xs-12">
                            <label>Elija una foto:</label>
                            <input type="file" class="form-control" id="File" name="File"/>
                            @if (ViewBag.FileUploadError !=null)
                            {
                                <span class="text-danger">@ViewBag.FileUploadError</span>
                            }
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Fecha de inicio:</label>
                            @Html.TextBoxFor(m => m.FechaInicio, new { @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.FechaInicio, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Fecha de fin:</label>
                            @Html.TextBoxFor(m => m.FechaFin, new { @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.FechaFin, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-sm-6 col-md-4">
                            <label>Lugares disponibles:</label>
                            @Html.TextBoxFor(m => m.LugaresDisponibles, new { @class = "form-control", type = "number", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.LugaresDisponibles, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-sm-6 col-md-4">
                            <label>Precio unitario:</label>
                            @Html.TextBoxFor(m => m.PrecioPorPersona, new { @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.PrecioPorPersona, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-sm-12">
                            @Html.CheckBoxFor(m => m.Destacado,false)
                            <label>destacar</label>
                        </div>
                        <div class="btn-group col-xs-12">
                            <input type="submit" value="Guardar" class="btn btn-success" />
                            <a href="/Admin/Paquetes/Index" class="btn btn-danger">Cancelar</a>
                        </div>
                    



