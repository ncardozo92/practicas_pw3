@model Usuario
@{
    Layout = "~/Views/Shared/AnonimoLayout.cshtml";


}
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="text-center">Inicio de sesión</h2>
                </div>
                <div class="panel-body">
                        @if (ViewBag.NotFound != null)
                        {
                            <div class="alert alert-danger">
                                Usuario y/o contraseña incorrectos.
                            </div>
                        }

                        @using (Html.BeginForm())
                        {
                        <div class="form-group">
                            <label>Ingrese dirección de correo:</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Email,null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Ingrese contraseña:</label>
                            @Html.PasswordFor(m => m.Contrasenia, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Contrasenia, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" id="btnIngresar" name="btnIngresar" value="ingresar" />
                        </div>
                        }
                </div>
            </div>
        </div>
    </div>
</div>
